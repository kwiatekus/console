{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/*.tsx",
    "src/**/*.tsx",
    "src/*.js",
    "src/*.jsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": ["dist/**/*"]
}
